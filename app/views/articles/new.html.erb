<h1>New article</h1>
<% form_for(@article) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <!--<p>
  <%#= f.label :position %><br />
  <%#= f.text_field :position %>
  </p>-->
  <p>
    <%= f.label :category %><br />
    <%= collection_select(:category, :id, @categories, :id, :name, options ={:prompt => "-Select a Category-"}, :class =>"payment") %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<%= link_to 'Back', articles_path %>